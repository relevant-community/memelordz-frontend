{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es6", "dom"],
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "outDir": "./lib",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
